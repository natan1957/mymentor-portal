@using MyMentor.BL.Extentions
@model MyMentor.BL.ViewModels.LessonsViewModel

@if(Model.PageCount > 1)
{ 
<div class="lesson_navigation_wrapper">
    
    
    @if (!Model.IsFirstPage)
{
    <a class="icon_right_arrow" href="@Html.AppendPaging(Model.CurrentPage-1)"></a>
}
    <span class="lesson_navigation">
        @for (int i = 1; i <= Model.PageCount; i++)
        {
            var selectedClass = i == Model.CurrentPage ? "selected" : "";
            <a class="@selectedClass" href="@Html.AppendPaging(i)">@i</a>
        }
    </span>
    
    @if (!Model.IsLastPage)
{
    <a class="icon_left_arrow" href="@Html.AppendPaging(Model.CurrentPage+1)"></a>
}
</div>
}